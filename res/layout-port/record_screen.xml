<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:id="@+id/root_layout"
		>

	<TextView
			android:id="@+id/state_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/rotate_device_to_change_video_orientation"
			android:background="@null"
			android:layout_gravity="center"
	        android:textSize="18sp"
	        android:layout_marginTop="5dp"
	        android:textColor="#F33"
			/>

	<RelativeLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="1"
			>
		<ImageView
				android:id="@+id/nexus_image"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/nexus_one"
				android:background="@null"
				/>
		<ImageView
				android:id="@+id/record_screen_up_button"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/screen_orientation_up"
				android:background="@null"
				android:scaleType="center"
				/>
	</RelativeLayout>

	<RelativeLayout android:layout_width="match_parent"
	              android:layout_height="wrap_content">
		<ImageButton
				android:id="@+id/record_screen_start_btn"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:background="#0000"
				android:src="@drawable/btn_start_record"
				android:layout_centerInParent="true"
				android:scaleType="fitXY"
				android:layout_margin="5dp"
				android:onClick="startRecordButtonClicked"
				/>
	</RelativeLayout>
</LinearLayout>