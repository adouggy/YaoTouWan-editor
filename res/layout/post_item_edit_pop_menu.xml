<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="230dp"
              android:layout_height="65dp"
		>
	<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
	        android:src="@drawable/post_item_pop_menu_bg"
	        android:scaleType="fitXY"
			/>
	<LinearLayout android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:paddingTop="10dp"
	              android:paddingLeft="10dp"
	              android:paddingRight="5dp"
			>
		<LinearLayout
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:paddingTop="8dp"
				android:paddingBottom="20dp"
				>
			<ImageButton
					android:id="@+id/edit_btn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@null"
					android:src="@drawable/post_item_pop_menu_edit_btn_src"
					/>
		</LinearLayout>
		<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@null"
				android:src="@drawable/post_item_pop_menu_group_sep"
				/>
		<LinearLayout
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
			android:paddingTop="8dp"
			android:paddingBottom="20dp"
			>
			<ImageButton
					android:id="@+id/head_btn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@null"
					android:src="@drawable/post_item_pop_menu_head_btn_src"
					/>
		</LinearLayout>
		<LinearLayout
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:paddingTop="8dp"
				android:paddingBottom="20dp"
				>
			<ImageButton
					android:id="@+id/bold_btn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@null"
					android:src="@drawable/post_item_pop_menu_bold_btn_src"
					/>
		</LinearLayout>
		<LinearLayout
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:paddingTop="8dp"
				android:paddingBottom="20dp"
				>
			<ImageButton
					android:id="@+id/italic_btn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@null"
					android:src="@drawable/post_item_pop_menu_italy_btn_src"
					/>
		</LinearLayout>
		<LinearLayout
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:paddingTop="8dp"
				android:paddingBottom="20dp"
				>
			<ImageButton
					android:id="@+id/quote_btn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@null"
					android:src="@drawable/post_item_pop_menu_quote_btn_src"
					/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>