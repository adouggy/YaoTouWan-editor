<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="me.yaotouwan"
      android:versionCode="1"
      android:versionName="1.0">

	<uses-sdk
		android:minSdkVersion="11"
		android:targetSdkVersion="19" />

	<uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<!--<uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />-->
	<uses-permission android:name="android.permission.INTERNET" />

	<uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.autofocus" />

    <application android:label="@string/app_name"
                 android:icon="@drawable/ic_launcher"
                 android:theme="@style/PostTheme"
		    >

	    <activity
		        android:name=".MainActivity"
			    >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	    <activity android:name=".post.PostActivity"
	              android:configChanges="orientation|screenSize"
	              android:windowSoftInputMode="stateHidden"
			    />
	    <activity android:name=".post.PreviewImageActivity"
	              android:configChanges="orientation|screenSize"
			    />
	    <activity
			    android:name=".post.RecordScreenActivity"
			    />
	    <activity android:name=".screenrecorder.EditVideoActivity"
	              android:configChanges="orientation|screenSize"
	              android:theme="@style/PreviewPhotoTheme"
			    />
	    <activity android:name=".screenrecorder.SelectGameActivity"/>
	    <activity android:name=".post.ConfirmPhotoActivity"
	              android:theme="@style/PreviewPhotoTheme"
			    />
	    <activity android:name=".post.PostEditorActivity"
	              android:windowSoftInputMode="stateVisible|adjustResize"
	              android:screenOrientation="portrait"
			    />
	    <activity android:name=".post.PhotoAlbum"/>
	    <activity android:name=".post.SelectPhoto"/>
	    <activity android:name=".post.PreviewPost"/>

	    <service android:name=".screenrecorder.SRecorderService"/>
	    <service android:name=".post.UploadPostMediaService"/>

    </application>
</manifest>
